# Include the README
include README.md

# Include the license file
include LICENSE

# Include the environment example
include .env.example

# Include static files for web UI
recursive-include apiforge/web/static *

# Include SQL files
recursive-include apiforge/web/migrations *.sql
recursive-include apiforge/core/db/sqlite *.sql

# Include HTML templates
recursive-include apiforge/web/static/pages *.html

# Exclude development files
exclude .gitignore
exclude pyproject.toml
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude .git *